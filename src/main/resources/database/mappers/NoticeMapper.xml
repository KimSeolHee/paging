<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.start.board.notice.NoticeDAO">
	
	<sql id="search">
		where 
			<choose>
				<when test="kind == 'title'">title</when>
				<when test="kind == 'writer'">writer</when>
				<otherwise>contents</otherwise>
			</choose>
		like '%' || #{search}|| '%'
	</sql>
	<select id="getList" parameterType="Pager"
		resultType="NoticeDTO">
		select * from (
			select rownum R, N.* from (
				select * from notice <include refid="search"></include> 
				order by num desc
				) N)
		where R between #{startRow} and #{lastRow}
	</select>
	
	<select id="getDetail" parameterType="BoardDTO"
		resultType="NoticeDTO">
		SELECT * FROM NOTICE WHERE NUM = #{num}	
	</select>
	
	<insert id="setAdd" parameterType="BoardDTO">
		INSERT INTO NOTICE VALUES (BOARD_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, SYSDATE, 0)
	</insert>
	
	<update id="setUpdate" parameterType="BoardDTO">
		UPDATE NOTICE SET TITLE = #{title}, CONTENTS = #{contents} WHERE NUM=#{num}
	</update>
	
	<delete id="setDelete" parameterType="BoardDTO">
		DELETE NOTICE WHERE NUM=#{num}
	</delete>
	
	<select id="getCount" resultType="java.lang.Long" parameterType="Pager">
		SELECT COUNT(NUM) FROM NOTICE <include refid="search"></include> 
	</select>
</mapper>